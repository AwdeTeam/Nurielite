<Window x:Class="Nurielite.DatatypeDesigner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Datatype Creator" 
		Height="150" Width="300" 
		MinHeight="150" MinWidth="300" 
		WindowStartupLocation="CenterScreen">
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- labels -->
		<StackPanel Grid.Column="0">
			<Label Content="Name:" Margin="10" Padding="1"/>
			<Label Content="Reals:" Margin="10" Padding="1"/>
		</StackPanel>

		<!-- text fields -->
		<StackPanel Grid.Column="1">
			<TextBox Name="txtNameInput" Text="unnamed" Margin="10" Padding="0"/>
			<TextBox Name="txtNumReals" Text="0" Margin="10" Padding="0"/>
		</StackPanel>

		<Button Grid.Column="1" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Padding="2" Click="Button_Click_ConfirmNew">Create Datatype</Button>
		
		<!-- <Button Content="&#x2713;" FontSize="20" Background="WhiteSmoke" Foreground="Green" HorizontalAlignment="Left" Margin="252,169,0,0" VerticalAlignment="Top" Width="32" Height="32" Click="Button_Click_ConfirmNew"/> -->
	</Grid>
</Window>
